package Chapter01;

public class Sort {
	public int[] Merge(int a[],int b[]){
		int i=0,j=0,k=0;
		int c[]=new int[a.length+b.length];
		while(i<a.length&&j<b.length){
			if(a[i]<b[j]){
				c[k]=a[i];
				i++;
				k++;
			}
			else{
				c[k]=b[j];
				k++;
				j++;
			}
		}
		if(i==a.length){
			for(;j<b.length;j++){
				c[k]=b[j];
				k++;
			}
		}else{
			for(;i<a.length;i++){
				c[k]=a[i];
				k++;
			}
		}
		return c;
	}
	
	public int[] selectionSort(int a[]){
		int k,temp,i;
		for(i=0;i<a.length-1;i++){
			k=i;
			for(int j=i+1;j<a.length;j++){
				if(a[k]>a[j]) k=j;
			}
			if(k!=i){
				temp=a[i];
				a[i]=a[k];
				a[k]=temp;
			}
		}
		
		
		
	}
}
