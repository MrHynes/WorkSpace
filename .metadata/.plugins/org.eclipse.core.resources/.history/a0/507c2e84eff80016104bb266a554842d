package Chapter01;

public class LinearSearch {
	public static int linearSearch(int a[],int x){
		int j=0;
		while(x!=a[j]&&j<a.length){
			j=j+1;
		}
		if(x==a[j]) return j;
		else return -1;
	}
	public static void main(String[] args) {
		int a[]={1,2,3,4,5,6,7};
		int x=linearSearch(a, 5);
		System.out.println(x);
	}

}
