
public class HappynUmber {

	public static boolean getHappyNumber(int number){
		boolean flag=false;
		if(number==1) flag= true;
		else{
			int numA=number/10;
			int numB=number%10;
			flag=getHappyNumber(numA*numA+numB+numB);
		}
		return flag;
	}
	public static void main(String[] args) {
		
	}
}
