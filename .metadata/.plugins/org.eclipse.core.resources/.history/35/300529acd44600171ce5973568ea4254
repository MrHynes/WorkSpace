<script type="text/javascript">
	$(function () {
		var xhr;
		function createXHR() {
			if (window.XMLHttpRequest) {
				xhr = new XMLHttpRequest();
			} else {
				try {
					xhr = new ActiveXObject("Msxml2.XMLHTTP");
				} catch (e) {
					xhr = new ActiveXObject("Microsoft.XMLHTTP");
				}
			}
		}
		$("#type").click(function () {
			getType();
		});
		function getType() {
			createXHR();
			var url = "admGood" ;
			var payload ="task=getType";
			xhr.open("POST", url,"true") ;
			xhr.setRequestHeader("Content-Type","application/x-www-form-urlencoded;charset=utf-8") ;
			xhr.onreadystatechange = function() {//回调函数
				processResponse(xhr) ;
			};
			xhr.send(payload) ;
		}
		 function processResponse(xhr) {
			 if (xhr.readyState==4 && xhr.status==200) {
				 var msgList=JSON.parse(xhr.responseText);
				 $("#type").empty();
				 $("#type").append("<option>请选择商品所属小类</option>");
				 for(var i=0;i<msgList.length;i++){					
					var types=msgList[i].split("&");
					var msg=$(" <option value='"+types[0]+"'>"+types[1]+"</option>");
					$("#type").append(msg);
					//alert(msgList[i]);
				 }  
			 }			
		} 
	});
	var xhr2;
	function createXHR() {
		if (window.XMLHttpRequest) {
			xhr2 = new XMLHttpRequest();
		} else {
			try {
				xhr2 = new ActiveXObject("Msxml2.XMLHTTP");
			} catch (e) {
				xhr2 = new ActiveXObject("Microsoft.XMLHTTP");
			}
		}
	}
	function get_sm_type() {
		var typeid=document.getElementById("type").value;
		createXHR();
		var url = "admGood" ;
		var payload ="task=getType";
		xhr.open("POST", url,"true") ;
		xhr.setRequestHeader("Content-Type","application/x-www-form-urlencoded;charset=utf-8") ;
		xhr.onreadystatechange = function() {//回调函数
			processResponse(xhr) ;
		};
		xhr.send(payload) ;
		//alert(typeid);//typeid
		 //var paylod="id="+document.getElementById("nation").value;
	};
</script>
