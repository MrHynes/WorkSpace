
public class Replace {
	public static String replace(String str,char src,char dest){
		char c[]=str.toCharArray();
		for(int i=0;i<str.length();i++){
			if(dest!='@'&&c[i]==src){
				c[i]=dest;
			}
		}
		return new String(c);
	}
	public static void main(String[] args) {
		System.out.println(replace("Hello", 'e','a'));
	}

}
