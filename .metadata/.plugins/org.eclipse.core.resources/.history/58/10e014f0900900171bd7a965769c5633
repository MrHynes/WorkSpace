function checkform(){ 
    if(document.getElementById('username').value.length==0){    
        alert('输入为空！');
        document.getElementById('username').focus();
        return false;
    }
    if(document.getElementById('username').value=="请输入搜索内容"){    
        alert('输入为空！');
        document.getElementById('username').focus();
        return false;
    }
}
</script>