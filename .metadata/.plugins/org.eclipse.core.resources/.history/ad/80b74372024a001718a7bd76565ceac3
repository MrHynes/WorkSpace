<script type="text/javascript">
function modify(id) {
	var typeName=$("#"+id).val();
	var supName=$("#"+id+"sup").val();
	//alert(typeName);
	//alert(supName);
	bootbox.confirm({
		size : "small",
		message : "确认修改吗?",
		callback : function(result) {
			if (result) {
				location.href = "getTypes?task=updateType&typeID="+id+"&typeName="+typeName+"&supName="+supName;
			} else {
				return;
			}
		}
	});
}
function delByID(id) {
	bootbox.confirm({
		size : "small",
		message : "确认删除吗?",
		callback : function(result) {
			if (result) {
				location.href = "getTypes?task=deleteType&typeID="+id;
			} else {
				return;
			}
		}
	});
}
</script>
