<script>
 $(function () {
	$("button").click(function () {
		var goodID=$("#goodID").val();
		var price=$("#price").val();
		var isLogin=$("#isLogin").val();
		if(isLogin.length<=0){
			bootbox.confirm({
				size : "small",
				message : "您还未登录，请先登录！",
				callback : function(result) {
					return;
				}
			});
		}else{
			bootbox.confirm({
				size : "small",
				message : "确定要购买此商品吗？",
				callback : function(result) {
					if(result){
						location.href="/ECProject/frontend/createOrder?task=directBuy&goodid="+goodID+"&price="+price;	
					}else{
						return ;
					}
				}
			});
		}
	});
 });
</script>
